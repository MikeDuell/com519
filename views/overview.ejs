      <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
      <script type="text/javascript">
        google.charts.load('current', {'packages':['corechart']});
        google.charts.setOnLoadCallback(drawChart);


        /* setup functions for graphs*/ 
        function drawChart() {
          var dataTemp = google.visualization.arrayToDataTable([
            ['Year', 'Sales'],
            ['2004',  1000],
            ['2005',  1170],
            ['2006',  660],
            ['2007',  1030]
          ]);
  
          var options_temp = {
            title: 'Temperature',
            curveType: 'function',
            legend: { position: 'bottom' }
          };
  
          var chartTemp = new google.visualization.LineChart(document.getElementById('curve_chart_temp'));
  
          chartTemp.draw(dataTemp, options_temp);

          
          var dataLevel = google.visualization.arrayToDataTable([
            ['Year', 'Sales'],
            ['2004',  1000],
            ['2005',  1170],
            ['2006',  660],
            ['2007',  1030]
          ]);
  
          var options_level = {
            title: 'SEA LEVEL',
            curveType: 'function',
            legend: { position: 'bottom' }
          };
  
          var chartLevel = new google.visualization.LineChart(document.getElementById('curve_chart_level'));
  
          chartLevel.draw(dataLevel, options_level);


          var dataEmmissions = google.visualization.arrayToDataTable([
            ['Year', 'Sales'],
            ['2004',  1000],
            ['2005',  1170],
            ['2006',  660],
            ['2007',  1030]
          ]);
  
          var optionsEmmissions = {
            title: 'carbon Dioxide emmissions',
            curveType: 'function',
            legend: { position: 'bottom' }
          };
  
          var chartEmmissions = new google.visualization.LineChart(document.getElementById('curve_chart_emmissions'));
  
          chartEmmissions.draw(dataEmmissions, optionsEmmissions);
        }
      </script>


